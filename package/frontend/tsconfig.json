{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@environments/*": [
                "src/environments/*"
            ],
            "@grpc/*": [
                "src/app/grpc/*"
            ],
            "@shared/*": [
                "src/app/share/*"
            ],
            "@services/*": [
                "src/app/core/services/*"
            ],
            "@pages/*": [
                "src/app/pages/*"
            ],
            "@utils/*": [
                "src/app/shared/utils/*"
            ]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
